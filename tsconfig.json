{
    "compilerOptions": {
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noUncheckedIndexedAccess": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "outDir": "dist",
      "target": "ES2023",
      "sourceMap": true,
      "declaration": true,
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  